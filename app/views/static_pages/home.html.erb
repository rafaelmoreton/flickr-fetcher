<%= form_with url: "/home", method: :get, class: "user-id-form" do |form| %>
  <%= form.text_field :user_id, placeholder: "Flickr User ID", value: params[:user_id] %>
  <%= form.submit "Fetch Photos" %>
<% end %>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: name %>
<% end %>

<div class="photo-grid">
  <% if @photos %>
    <% @photos.each do |photo| %>
        <div class="photo-item">
          <div><%= image_tag "https://live.staticflickr.com/#{photo.server}/#{photo.id}_#{photo.secret}.jpg"%></div>
        </div>
    <% end %>
  <% end %>
</div>